<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="3">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#ff0000"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="第一行，第一列" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_column="1"
        android:background="#ff00cc"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="第一行，第二列"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_column="2"
        android:background="#4e00ff"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="第一行，第三列"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_column="0"
        android:background="#00a2ff"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="第二行,第一列"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_column="1"
        android:background="#00ff9c"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="第二行，第二列"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_column="2"
        android:background="#d2ff00"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="第二行，第三列"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="2"
        android:layout_column="0"
        android:background="#ff0000"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:layout_marginTop="10dp"
        android:text="第三行，第一列" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="2"
        android:layout_column="1"
        android:background="#ba00ff"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:layout_marginTop="10dp"
        android:text="第三行，第二列"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:background="#ff9c00"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:layout_marginTop="10dp"
        android:text="第三行，第三列"/>

</GridLayout>
