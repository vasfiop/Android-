<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.UpdateActivity">

    <EditText
        android:id="@+id/UA_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请填写店铺名称" />

    <EditText
        android:id="@+id/UA_edit_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请填写店铺地址" />

    <EditText
        android:id="@+id/UA_edit_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请填写店铺电话" />

    <Button
        android:id="@+id/UA_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定" />

    <Button
        android:id="@+id/UA_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消" />

</LinearLayout>